<style>
  /* --- Mobile marquee: performant autoplay (transform only) --- */
  .marquee {
    --gap: 2rem;
    overflow: hidden;
  }

  /* soft edge fade so the scroll looks nicer */
  .mask-fade {
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 10%,
      black 90%,
      transparent 100%
    );
  }

  .marquee__track {
    display: flex;
    width: max-content;
    align-items: center;
    gap: var(--gap);
    will-change: transform;
    animation: marquee-scroll 18s linear infinite;
  }

  .marquee__track--slow {
    animation-duration: 24s;
  }

  .marquee__track--fast {
    animation-duration: 14s;
  }

  /* Pause when interacting (good UX + accessibility) */
  .marquee:hover .marquee__track,
  .marquee:focus-within .marquee__track {
    animation-play-state: paused;
  }

  .marquee__chunk {
    display: flex;
    flex-shrink: 0;
    align-items: center;
    gap: 0.75rem;
    padding-right: var(--gap);
    white-space: nowrap;
  }

  .marquee__pill {
    display: inline-flex;
    align-items: center;
    border-radius: 9999px;
    padding: 0.125rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 700;
    background: rgba(255, 255, 255, 0.75);
    color: #111827;
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.05);
  }

  .marquee__pill--dark {
    background: rgba(16, 185, 129, 0.18);
    color: #e5e7eb;
    border: 1px solid rgba(52, 211, 153, 0.25);
  }

  .marquee__pill--ribbon {
    background: rgba(255, 255, 255, 0.18);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .marquee__text {
    font-size: 0.875rem;
    font-weight: 600;
  }

  .marquee__sep {
    opacity: 0.5;
  }

  .marquee__link {
    text-decoration: underline;
    text-underline-offset: 2px;
    font-weight: 600;
  }
  .marquee__link:hover {
    text-decoration: none;
  }

  .marquee__link--dark {
    color: #f9fafb;
  }

  .marquee__link--btn {
    text-decoration: none;
    background: #111827;
    color: white;
    padding: 0.25rem 0.6rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 700;
  }

  .marquee__link--ribbon {
    color: white;
  }

  @keyframes marquee-scroll {
    0% {
      transform: translate3d(0, 0, 0);
    }
    100% {
      transform: translate3d(-50%, 0, 0);
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .marquee__track {
      animation: none;
      transform: none;
    }
  }

  /* Variant 5 shimmer (kept subtle) */
  .shimmer {
    background: linear-gradient(
      110deg,
      transparent 0%,
      rgba(255, 255, 255, 0.35) 35%,
      transparent 70%
    );
    transform: translateX(-60%);
    animation: shimmer 2.8s linear infinite;
  }
  @keyframes shimmer {
    0% {
      transform: translateX(-60%);
    }
    100% {
      transform: translateX(60%);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .shimmer {
      animation: none;
    }
  }
</style>
