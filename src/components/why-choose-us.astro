---
import { Image } from 'astro-lqip/components';
// import whyChooseImg from '@assets/images/home/why-choose.webp';
import homeData from '@data/home.json';
import { resolveImage } from '@js/imageUtils';

const whyChooseImg = await resolveImage(homeData.whyChooseUs.image);
---

<section id="why-choose-us" class="px-0">
  <div
    class="relative mx-auto grid grid-cols-6 items-stretch gap-0 px-6 py-12 md:py-14 lg:py-16"
  >
    <!-- Left image -->
    <div
      class="relative col-span-full xl:col-start-2 xl:col-end-4 xl:justify-self-end"
    >
      {
        whyChooseImg && (
          <Image
            src={whyChooseImg}
            class="mx-auto block aspect-square w-full max-w-[600px] object-cover lg:h-full xl:ms-0"
            alt={homeData.whyChooseUs.alt}
            lqip="base64"
            lqipSize={10}
          />
        )
      }
    </div>

    <!-- Card with bullets -->
    <div
      class="relative inset-0 col-span-full mx-auto flex items-center py-12 md:px-6 xl:absolute xl:col-start-4 xl:col-end-7 xl:mx-0 xl:justify-self-start"
    >
      <div
        class="w-full max-w-[680px] rounded-xl bg-orange-200 shadow-[0_10px_25px_rgba(0,0,0,0.15)] ring-1 ring-black/10"
      >
        <div class="p-6 sm:p-8 md:p-10">
          <h3
            class="font-serif text-[clamp(var(--text-2xl),5vw,var(--text-4xl))] leading-snug text-gray-950"
          >
            {homeData.whyChooseUs.title}
          </h3>

          <p class="mt-4 leading-7 text-gray-700">
            {homeData.whyChooseUs.description}
          </p>

          <ul class="mt-6 space-y-3 text-gray-800">
            {
              homeData.whyChooseUs.points.map((point) => (
                <li class="flex gap-3">
                  <span class="mt-2 h-2 w-2 rounded-full bg-gray-900" />
                  <span>{point.text}</span>
                </li>
              ))
            }
          </ul>

          <div class="mt-8">
            <a
              href="/about"
              class="inline-flex items-center rounded-full border-2 border-gray-900 px-5 py-2.5 text-sm font-semibold text-gray-900 transition hover:bg-orange-100"
            >
              Learn More
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
